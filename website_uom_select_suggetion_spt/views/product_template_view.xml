<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_multi_uom_view_form" model="ir.ui.view">
        <field name="name">product_template_multi_uom_view_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <group string="UOM" attrs="{'invisible':[('type','==','service')]}">
                    <field name="product_uom_category_id" />
                    <field name="product_uom_ids" widget="many2many_tags" 
                           domain="[('category_id','=',product_uom_category_id)]"
                           options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
