<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <template id="pos_session">
		    <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-left container">
                            <h4>Sales Summary by Location</h4>
                            <h6>Date: <t t-esc="start_dt"/> - <t t-esc="end_dt"/></h6><br/>
                        </div>
                        <div class="container" style="font-size: 10px;">
                            <table width="100%">
                                <tr style="margin:5px;padding:4px;">
                                    <th style="border:1px solid black" width="15%" class="text-center">Point of Sale</th>
                                    <th style="border:1px solid black" width="10%" class="text-center">Opened by</th>
                                    <th style="border:1px solid black"  width="15%" class="text-center">Opening Date</th>
                                    <th style="border:1px solid black"  width="12%" class="text-center">Closing Date</th>
                                    <th style="border:1px solid black"  width="12%" class="text-center">Status</th>
                                    <th style="border:1px solid black"  width="12%" class="text-center">Session ID</th>
                                    <th style="border:1px solid black"  width="12%" class="text-center">Payment Methods</th>
                                    <th style="border:1px solid black"  width="12%" class="text-center">Total</th>
                                </tr>
                                <t t-set="total_amount_total" t-value="0"/>
                                <tr t-foreach="lines" t-as="l">
                                    <td style="border:1px solid black" ><span t-esc="l['pos_name']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['opend_by']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['start_dt']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['stop_dt']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['state']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['name']"/></td>
                                    <td style="border:1px solid black" ><span t-esc="l['payment_method']"/></td>
                                    <td  style="border:1px solid black" class="text-right"><span t-esc="l['total']"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
		    </t>
		</template>

		<record id="action_print_pos_session" model="ir.actions.report">
            <field name="name">Session Report</field>
            <field name="model">pos.session.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_pos_session_summary.pos_session</field>
            <field name="report_file">custom_pos_session_summary.pos_session</field>
            <field name="print_report_name">'AP Report'</field>
            <field name="binding_model_id" ref="custom_pos_session_summary.model_pos_session_report_wizard"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>